<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@expense_class, url: yield(:url) ) do |f| %>
      <%= render 'shared/error_messages' , object: f.object %>

      <%= f.label :department_id %>
      <%= f.collection_select :department_id, Department.all, :id, :name, {:include_blank => true},{:class => "form-control"} %>

      <%= f.label :name %>
      <%= f.text_field :name ,class:'form-control' %>
      
      <%= f.hidden_field :project_id %>

      <%= f.submit yield(:botton_text) , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
