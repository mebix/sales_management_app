<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contract_expense, url: yield(:url) ) do |f| %>
      <%= render 'shared/error_messages' , object: f.object %>

      <%= f.label :expense_master %>
      <%= f.collection_select :expense_master_id, @contract_expense.project.active_expense_masters, :id, :full_name, {:include_blank => true},{:class => "form-control"} %>
      
      <%= f.label :date %>
      <%= f.date_select :date , { :discard_day => true, :use_month_numbers => true},{ :class => "form-control"}  %>
      
      <%= f.label :unit_price %>
      <%= f.number_field :unit_price ,class:'form-control', step: 0.1 %>

      <%= f.label :unit %>
      <%= f.number_field :unit ,class:'form-control' , step: 0.1 %>
      
      <%= f.hidden_field :project_id %>

      <%= f.submit yield(:botton_text) , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>